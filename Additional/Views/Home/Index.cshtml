@{
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Calculator</title>
</head>
<body>
    <p>Calculator</p>
    <form asp-controller="home" asp-action="index" method="post">
        <label>Number 1</label>
        <input type="text" name="number1" value="@Model.Number1" />
        <label>Number 2</label>
        <input type="text" name="number2" value="@Model.Number2" />
        <label>Result</label>
        <input type="text" value="@Model.Result" />
        <button type="submit" value="+" name="calculate">+</button>
        <button type="submit" value="-" name="calculate">-</button>
        <button type="submit" value="*" name="calculate">*</button>
        <button type="submit" value="/" name="calculate">/</button>
        <button type="submit" value="clear" name="calculate">clear</button>


    </form>
    
        
    

</body>
</html>
